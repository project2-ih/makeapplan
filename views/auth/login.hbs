<div class="container">
  <h2 class="title">Login</h2>

  <form class="form" action="/auth/login" method="POST" id="form-container">
    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="JonSnow">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password">
    </div>

    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <button class="btn btn-primary">Login</button>

    <p class="account-message">
      Don't have an account yet?
      <a href="/auth/signup">Signup</a>
    </p>
  </form>

  <p>
    <a class="btn btn-secondary" href="/auth/google">Login With Google</a>
  </p>

  <p>
    <a class="btn btn-secondary" href="/auth/facebook">Login with Facebook</a>
  </p>
</div>