<div class="container">
  <h2 class="title">Signup</h2>

  <form class="form" action="/auth/signup" method="POST" id="form-container" enctype="multipart/form-data">
    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="Enter username">
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input id="email" type="email" name="email" placeholder="Enter Email">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password">
    </div>

    <div class="form-group">
      <label for="profilePhoto">Photo:</label>
      <input type="file" name="profilePhoto">
    </div>


    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <button class="btn btn-primary">Create account</button>
  </form>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>

  <p class="account-message">
    <a class="btn btn-secondary" href="/auth/google">Login with Google</a>
  </p>

  <p class="account-message">
    <a class="btn btn-secondary" href="/auth/facebook">Login with Facebook</a>
  </p>
</div>